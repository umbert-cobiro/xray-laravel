{
    "name": "napp/xray-laravel",
    "description": "AWS X-Ray for Laravel applications.",
    "keywords": ["xray", "php", "tracing", "laravel"],
    "license": "MIT",
    "require": {
        "ext-json": "*",
        "php": ">=7.4",
        "illuminate/console": "^5.5|^6.0|^7.0",
        "illuminate/contracts": "^5.5|^6.0|^7.0",
        "illuminate/support": "^5.5|^6.0|^7.0",
        "pkerrigan/xray": "^1.2",
        "aws/aws-sdk-php": "^3.133"
    },
    "require-dev": {
        "orchestra/testbench": "^5.0",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-mockery": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12",
        "friendsofphp/php-cs-fixer": "^2.15"
    },
    "autoload": {
        "psr-4": {
            "Napp\\Xray\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Napp\\Xray\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "Napp\\Xray\\XrayServiceProvider"
            ],
            "aliases": {
                "Xray" : "Napp\\Xray\\Facades\\Xray"
            }
        }
    },
    "scripts": {
        "check": [
            "vendor/bin/phpstan --memory-limit=-1 analyze --ansi",
            "vendor/bin/phpunit --color=always"
        ],
        "test:unit": [
            "vendor/bin/phpstan --memory-limit=-1 analyze --ansi",
            "vendor/bin/phpunit --coverage-clover clover.xml --log-junit ~/phpunit/junit.xml"
        ]
    }
}
